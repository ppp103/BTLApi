@model NguoiDung
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main>
    <div class="login-container">
        <div class="m-b-100" style="height:300px"></div>
        <h1>Đăng Ký</h1>
        @using (Html.BeginForm("SignUp", "Access", FormMethod.Post))
        {
            @* <form>*@
            <div class="form-group">
                @Html.TextBoxFor(x => x.TaiKhoan,
            new { @class = "form-control", required = "required" })
                <p>Tên</p>
                <span />
            </div>

            <div class="form-group">
                @Html.TextBoxFor(x => x.MatKhau,
            new { @class = "form-control", required = "required" })
                <p>Mật khẩu</p>
                <span />
            </div>

            <div class="form-group">
                @Html.TextBoxFor(x => x.MatKhau,
            new { @class = "form-control", required = "required" })
                <p>Xác nhận mật khẩu</p>
                <span />
            </div>

            <div class="form-group">
                @Html.TextBoxFor(x => x.Email,
            new { @class = "form-control", required = "required" })
                <p>Email</p>
                <span />
            </div>
            <button type="submit" class="button">Đăng ký</button>
            @*  </form>*@
            <a asp-controller="Access" asp-action="Login" class="button sign-up-button">Quay lại </a>
        }
    </div>
</main>

