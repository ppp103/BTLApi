@model NguoiDung
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<!-- Main section starts -->
<main>
    <div class="login-container">
        <div class="m-b-100" style="height:300px"></div>
        <h1>Đăng Nhập</h1>
        @using (Html.BeginForm("Login", "Access", FormMethod.Post))
        {
            @* <form>*@
            <div class="form-group">
                @Html.TextBoxFor(x => x.TaiKhoan,
            new { @class = "form-control", required = "required" })
                <p>Tên</p>
                <span />
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.MatKhau,
            new { @class = "form-control", required = "required" })
                <p>Mật khẩu</p>
                <span />
            </div>
            <button type="submit" class="button">Đăng nhập</button>
            <div class="forget-password">
                <a href="#">Quên mật khẩu ?</a>
            </div>
            <a asp-controller="Access" asp-action="SignUp" class="button sign-up-button">Tạo tài khoản mới</a>
            @*</form>*@
        }
    </div>
</main>
<!-- Main section ends -->
