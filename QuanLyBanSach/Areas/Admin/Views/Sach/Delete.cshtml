@model QuanLyBanSach.Models.Sach

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Bạn có chắc muốn xóa sách này không ?</h3>
<div>
    <h4>Sách</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Tên sách
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenSach)
        </dd>
        <dt class = "col-sm-2">
           Giá bán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaBan)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.MoTa)
        </dd>
        <dt class = "col-sm-2">
           Số lượng bản sao
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuongBs)
        </dd>
        <dt class = "col-sm-2">
            Ảnh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Anh)
        </dd>
        <dt class = "col-sm-2">
            Ngày cập nhật
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>
        <dt class = "col-sm-2">
            Số lượng còn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuongCon)
        </dd>
        <dt class = "col-sm-2">
            Danh mục
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaDmNavigation.TenDm)
        </dd>
        <dt class = "col-sm-2">
            Nhà xuất bản
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaNxbNavigation.TenNxb)
        </dd>
        <dt class = "col-sm-2">
           Tác giả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaTgNavigation.TenTg)
        </dd>
    </dl>
    
    <form class="btn btn-info btn-tone m-r-5" asp-action="Delete">
        <input type="hidden" asp-for="MaSach" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a class="btn btn-primary btn-tone m-r-5" asp-action="Index">Quay lại</a>
    </form>
</div>
