                <span asp-validation-for="MaDm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-tone m-r-5" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info btn-tone m-r-5" asp-action="Index">Back to List</a>
</div>

