@model QuanLyBanSach.Models.Admins

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Admin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ tên admin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTenAd)
        </dd>
        <dt class="col-sm-2">
            Tên đăng nhập
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenDangNhap)
        </dd>
        <dt class="col-sm-2">
            Mật khẩu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info btn-tone m-r-5" asp-action="Edit" asp-route-id="@Model?.MaAd">Sửa</a>
    <a class="btn btn-primary btn-tone m-r-5" asp-action="Index">Quay lại</a>
</div>
