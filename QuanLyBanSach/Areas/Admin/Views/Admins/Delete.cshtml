@model QuanLyBanSach.Models.Admins

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn chắc chắn muốn xóa tài khoản admin này chứ?</h3>
<div>
    <h4>Admin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ tên admin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTenAd)
        </dd>
        <dt class = "col-sm-2">
            Tên đăng nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenDangNhap)
        </dd>
        <dt class="col-sm-2">
            Mật khẩu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
    </dl>
    
    <form class="btn btn-info btn-tone m-r-5" asp-action="Delete">
        <input type="hidden" asp-for="MaAd" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a class="btn btn-primary btn-tone m-r-5" asp-action="Index">Quay lại</a>
    </form>
</div>
