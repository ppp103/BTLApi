@model QuanLyBanSach.Models.DonHang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chỉnh Sửa Đơn Hàng</h1>

<h4>Đơn Hàng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDonHang" />
            <div class="form-group">
                <label asp-for="DiaDiemGh" class="control-label">Địa Điểm Giao Hàng</label>
                <input asp-for="DiaDiemGh" class="form-control" />
                <span asp-validation-for="DiaDiemGh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayDat" class="control-label">Ngày Đặt</label>
                <input asp-for="NgayDat" class="form-control" />
                <span asp-validation-for="NgayDat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayGiao" class="control-label">Ngày Giao</label>
                <input asp-for="NgayGiao" class="form-control" />
                <span asp-validation-for="NgayGiao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TongTien" class="control-label">Tổng Tiền</label>
                <input asp-for="TongTien" class="form-control" />
                <span asp-validation-for="TongTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label">Ghi Chú</label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKh" class="control-label">Tên Khách Hàng</label>
                <input asp-for="TenKh" class="form-control" />
                <span asp-validation-for="TenKh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThaiDh" class="control-label">Trạng Thái Đơn Hàng</label>
                <input asp-for="TrangThaiDh" class="form-control" />
                <span asp-validation-for="TrangThaiDh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNd" class="control-label">Mã ND</label>
                <select asp-for="MaNd" class="form-control" asp-items="ViewBag.MaNd"></select>
                <span asp-validation-for="MaNd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info btn-tone m-r-5" asp-action="Index">Quay lại</a>
</div>

