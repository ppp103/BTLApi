@model IEnumerable<QuanLyBanSach.Models.DanhMucSach>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Danh mục sách</h1>

<p>
    <a class="btn btn-sm btn-outline-info" asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Tên danh mục
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDm)
            </td>
            <td>
                    <a class="btn btn-info btn-tone m-r-5" asp-action="Edit" asp-route-id="@item.MaDm">Edit</a>
                    <a class="btn btn-primary btn-tone m-r-5" asp-action="Details" asp-route-id="@item.MaDm">Details</a>
                    <a class="btn btn-secondary btn-tone m-r-5" asp-action="Delete" asp-route-id="@item.MaDm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
