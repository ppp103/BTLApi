@model QuanLyBanSach.Models.DanhMucSach

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn xóa danh mục này chứ?</h3>
<div>
    <h4>Danh mục sách</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Tên danh mục
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenDm)
        </dd>
    </dl>

    <form class="btn btn-info btn-tone m-r-5" asp-action="Delete">
        <input type="hidden" asp-for="MaDm" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a class="btn btn-primary btn-tone m-r-5" asp-action="Index">Quay lại</a>
    </form>
</div>
